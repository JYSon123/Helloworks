<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- ==== #29. 루트 엘리먼트 & 네임스페이스 설정(프로젝트 전체내에서 유일해야 한다.) ==== -->
<mapper namespace="final_pjw">

<!-- 개인 연락처 조회 쿼리  -->

<select id="addbookList_private" parameterType="HashMap" resultType="com.spring.addbook.model.AddbookVO">
	select name, email, phonenum, company, fk_tag
	from tbl_addbook
	where pbl = 1 and fk_empid = 'jubar2222'
	<if test = '!"".equals(fk_tag) and fk_tag != null'>
	and fk_tag  = #{fk_tag}
	</if>
	order by name asc
</select>
	
<!-- 공유 연락처 조회 쿼리 -->	


<select id="addbookList_public" resultType="com.spring.addbook.model.AddbookVO">
    select name, email, phonenum, company, fk_tag
	from tbl_addbook
	where pbl = 0
	<if test = '!"".equals(fk_tag) and fk_tag != null'>
	and fk_tag  = #{fk_tag}
	</if>
	order by name asc
</select>

